{
  "name": "farbraum",
  "version": "0.1.2",
  "type": "module",
  "keywords": [
    "color",
    "color operations",
    "fade",
    "saturate",
    "darken",
    "lighten",
    "grayscale",
    "esm"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/farbraum.umd.js",
  "module": "./dist/farbraum.js",
  "exports": {
    ".": {
      "import": "./dist/farbraum.js",
      "require": "./dist/farbraum.umd.cjs",
      "types": "./dist/farbraum.d.ts"
    }
  },
  "types": "./dist/farbraum.d.ts",
  "scripts": {
    "test": "vitest run",
    "build": "vite build",
    "prepare": "husky install",
    "format": "prettier -w {src,tests}/**/*.ts",
    "release": "release-it"
  },
  "dependencies": {
    "color-name": "2.0.0",
    "colortranslator": "1.9.3"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^2.8.0",
    "pretty-quick": "^3.1.3",
    "release-it": "^15.5.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.1",
    "vitest": "^0.25.3"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm test"
      ],
      "after:bump": [
        "npm run build"
      ]
    },
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
